      index={0}
      pfpimg="/fingersCrossed.webp"
      msg="Happy to know you're curious!. The full portfolio is just around the corner"
      className="bg-white animate-fade-in-up py-4 transform -translate-x-24 flex flex-row gap-3 items-center rounded-3xl pr-5 pl-3 shadow-[0_3px_24px_-2px_rgba(53,68,146,0.12)] max-sm:-translate-x-0 w-full max-w-md"
    />
    <Card
      index={1}
      pfpimg="/wink.webp"
      msg="Meanwhile, check out my work â†“"

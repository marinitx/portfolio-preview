---
import Home from '../components/Home.astro';
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const links = [
  { url: "https://github.com/marinitx", icon: "/github-icon.svg", text: "GitHub" },
  { url: "https://linkedin.com/in/marina-higueras", icon: "/linkedin-icon.svg", text: "LinkedIn" },
  { url: "https://www.behance.net/marinahigueras/", icon: "/behance-icon.svg", text: "Behance" }
];
---

<Layout>
  <Home />
  <main class="flex flex-col items-center gap-6 py-8 px-4">

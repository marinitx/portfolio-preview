---

<Layout>
  <div class="min-h-screen flex flex-col">
    <div class="flex-grow flex items-center justify-center w-full">
      <div class="w-full px-4">
        <div class="max-w-xl mx-auto">
          <Home />
          <main class="flex flex-col items-center gap-6">
            <Card
              index={0}
              pfpimg="/fingersCrossed.webp"
              msg="Happy to know you're curious!. The full portfolio is just around the corner"
              className="bg-white animate-fade-in-up py-4 transform -translate-x-24 flex flex-row gap-3 items-center rounded-3xl pr-5 pl-3 shadow-[0_3px_24px_-2px_rgba(53,68,146,0.12)] max-sm:-translate-x-0 w-full"
            />
            <Card
              index={1}
